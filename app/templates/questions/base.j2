<form id="form-content"
  {% block end_state %}
  hx-post="/form/state"
  hx-swap="outerHTML"
  hx-ext='json-enc'
  x-data="{ submitAction: 'next' }"
  hx-boost="true"
  class="animate-appear"
  {% endblock %}
  >
  <ul>
    {% block content %}
    {% endblock %}
    <li>
      {% block button %}
        <button @click="submitAction = 'previous'" id="previous" type="submit">previous</button>
        <button @click="submitAction = 'next'" id="next" type="submit">next</button>
      {% endblock %}
    </li>
  <ul>
</form>
